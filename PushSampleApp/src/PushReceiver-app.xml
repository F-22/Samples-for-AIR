<application xmlns="http://ns.adobe.com/air/application/3.1">

    <id>sample.push.PushReceiver</id>
    <versionNumber>1.0.0</versionNumber>    
    <filename>PushReceiver</filename>
    <name>Push Receiver</name>
    <description/>
    <copyright/>
		         
    <initialWindow>
	    <content>PushReceiver.swf</content>
